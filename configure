#!/bin/sh

copy_mk()
{
    cmd="cp Makefile.$1 Makefile"
    echo "+ $cmd"; $cmd
}

case `uname` in
    Darwin) copy_mk macos ;;
    Linux)  copy_mk linux ;;
    *)      copy_mk bsd ;;
esac

[ $# = 0 ] && exit 0

cat <<HELP
Adjust build options using the environment variables:

`make env`

Examples:

./configure
CFLAGS="-static" make test
PREFIX=\$HOME/local make install

HELP
exit 2
