#!/bin/sh

copy_mk()
{
    set -x
    cp Makefile.$1 Makefile
}

case `uname` in
    Darwin) copy_mk macos ;;
    Linux)  copy_mk linux ;;
    *)      copy_mk bsd ;;
esac

[ $# = 0 ] && exit 0

cat <<HELP
Configure flags not accepted. Adjust compile options using Make environment variables:

`make env`

Example:

./configure
CFLAGS="-static" make test
PREFIX=\$HOME/local make install

HELP
exit 2
